{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://our.company.com/propertyNew.schema.json",
  "type": "object",
  "properties": {
    "title": {
      "type": "string",
      "minLength": 1,
      "maxLength": 25
    },
    "address": {
      "type": "string",
      "minLength": 1,
      "maxLength": 255
    },
    "description": {
      "type": "string"
    },
    "price": {
      "type": "integer",
      "minimum": 0
    }
  },
  "additionalProperties": false,
  "required": [
    "title",
    "address",
    "description",
    "price"
  ]
}
